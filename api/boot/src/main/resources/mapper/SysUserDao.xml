<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.boot.module.dao.SysUserDao">
    <!--通过用户名查询用户-->
    <select id="loadUserByUsername" parameterType="java.lang.String" resultType="com.boot.module.entity.SysUser">
        SELECT userId, userName, password
        FROM sys_user
        WHERE userName = #{userName}
    </select>
    
    <insert id="testSave">
        INSERT INTO ${tableName}
        <foreach collection="object" index="column" item="item" open="(" close=")" separator=",">
            ${column}
        </foreach>
        VALUES
        <foreach collection="object" index="column" item="item" open="(" close=")" separator=",">
            #{item}
        </foreach>
    </insert>
</mapper>